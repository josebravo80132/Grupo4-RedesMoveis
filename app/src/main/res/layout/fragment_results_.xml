<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="665dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:padding="14dp"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="58dp"
                        android:layout_height="50dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/running" />

                    <TextView
                        android:id="@+id/tVCsintomas"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="2.9 Km"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="DistÃ£ncia "
                        android:textAlignment="center"
                        android:textColor="#171616"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="70dp"
                        android:layout_height="49dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/hourglass" />

                    <TextView
                        android:id="@+id/tVSuspeitos"
                        android:layout_width="150dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="00:17:23"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Tempo"
                        android:textAlignment="center"
                        android:textColor="#171616"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="81dp"
                        android:layout_height="55dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/dashboard" />

                    <TextView
                        android:id="@+id/tVInfection"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="10.01 Km/h"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Velocidade"
                        android:textAlignment="center"
                        android:textColor="#171616"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/i4"
                        android:layout_width="81dp"
                        android:layout_height="55dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/kcal" />

                    <TextView
                        android:id="@+id/tVInfections"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="---"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Calorias"
                        android:textAlignment="center"
                        android:textColor="#171616"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <Button
            android:id="@+id/concluir_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/rounded_button"
            android:text="Concluir"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</FrameLayout>